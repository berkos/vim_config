class MlbRankingSerializer < ActiveModel::Serializer
  attributes :id, :nickname, :game_date, :rank_for

  def nickname
    object.nickname.name
  end

  def game_date
    object.gameDate
  end

  5.times.each do |i| 
    has_one  "pitcher_ranking_#{i+1}".to_sym, serializer: PlayerSerializer , include: true
  end

  5.times.each do |i| 
    has_one  "catcher_ranking_#{i+1}".to_sym, serializer: PlayerSerializer , include: true
  end

  5.times.each do |i| 
    has_one  "second_base_ranking_#{i+1}".to_sym, serializer: PlayerSerializer , include: true
  end

  5.times.each do |i| 
    has_one  "third_base_ranking_#{i+1}".to_sym, serializer: PlayerSerializer , include: true
   end

  5.times.each do |i| 
    has_one  "short_stop_ranking_#{i+1}".to_sym, serializer: PlayerSerializer , include: true
  end

  10.times.each do |i| 
    has_one  "outfield_ranking_#{i+1}".to_sym, serializer: PlayerSerializer , include: true
  end
end
